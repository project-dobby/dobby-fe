{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./",
    "target": "es6",
    "sourceMap": true,
    "noImplicitAny": false,
    "removeComments": true,
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./node_modules/@types",
      "src/types"
    ],
    "paths": {
      "src/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
